@using Domains.ViewModels
@model PasswordGeneratorModel
@{
    ViewData["Title"] = "Password Generator";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="display-4 text-primary text-center font-weight-bold">Password Generator</h1>
<form asp-action="Index" method="post">
    <div class="input-group mb-3 mx-auto" style="max-width: 50rem;">
        <input asp-for="Password" value="@Model.Password" class="form-control form-control-lg" placeholder="@Html.DisplayNameFor(e => e.Password)" aria-label="@Html.DisplayNameFor(e => e.Password)" aria-describedby="button-addon2">
        <button class="btn btn-primary" type="submit" id="button-addon2">Generate</button>
    </div>
    <div class="card border-primary mb-3 mx-auto" style="max-width: 50rem;">
        <div class="card-header text-center text-primary">
            <h1>
                Settings
            </h1>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <h4 class="text-center text-primary mb-0 text-lg">@Html.DisplayNameFor(e => e.Length)</h4>
                </div>
                <div class="col-md-4">
                    <input asp-for="Length" type="number" min="1" max="64" class="form-control pt-0" autocomplete="@Html.DisplayNameFor(model => model.Length)" aria-required="true" placeholder="@Html.DisplayNameFor(model => model.Length)" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-5">
                    <h5 class="text-center text-primary">@Html.DisplayNameFor(e => e.UseDigits)</h5>
                </div>
                <div class="col-md-1 form-check form-check-lg form-switch">
                    <input asp-for="UseDigits" type="checkbox" class="form-check-input" autocomplete="@Html.DisplayNameFor(model => model.UseDigits)" aria-required="true" placeholder="@Html.DisplayNameFor(model => model.UseDigits)" />
                </div>
                <div class="col-md-5">
                    <h5 class="text-center text-primary">@Html.DisplayNameFor(e => e.UseLowercase)</h5>
                </div>
                <div class="col-md-1 form-check form-check-lg form-switch">
                    <input asp-for="UseLowercase" type="checkbox" class="form-check-input" autocomplete="@Html.DisplayNameFor(model => model.UseLowercase)" aria-required="true" placeholder="@Html.DisplayNameFor(model => model.UseLowercase)" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-5">
                    <h5 class="text-center text-primary">@Html.DisplayNameFor(e => e.UseUppercase)</h5>
                </div>
                <div class="col-md-1 form-check form-check-lg form-switch">
                    <input asp-for="UseUppercase" type="checkbox" class="form-check-input" autocomplete="@Html.DisplayNameFor(model => model.UseUppercase)" aria-required="true" placeholder="@Html.DisplayNameFor(model => model.UseUppercase)" />
                </div>
                <div class="col-md-5">
                    <h5 class="text-center text-primary">@Html.DisplayNameFor(e => e.UseSymbols)</h5>
                </div>
                <div class="col-md-1 form-check form-check-lg form-switch">
                    <input asp-for="UseSymbols" type="checkbox" class="form-check-input" autocomplete="@Html.DisplayNameFor(model => model.UseSymbols)" aria-required="true" placeholder="@Html.DisplayNameFor(model => model.UseSymbols)" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-5">
                    <h5 class="text-center text-primary">@Html.DisplayNameFor(e => e.UseUnique)</h5>
                </div>
                <div class="col-md-1 form-check form-check-lg form-switch">
                    <input asp-for="UseUnique" type="checkbox" class="form-check-input" autocomplete="@Html.DisplayNameFor(model => model.UseUnique)" aria-required="true" placeholder="@Html.DisplayNameFor(model => model.UseUnique)" />
                </div>
                <div class="col-md-5">
                    <h5 class="text-center text-primary">@Html.DisplayNameFor(e => e.DontUseExcludeSimilar)</h5>
                </div>
                <div class="col-md-1 form-check form-check-lg form-switch">
                    <input asp-for="DontUseExcludeSimilar" type="checkbox" class="form-check-input" autocomplete="@Html.DisplayNameFor(model => model.DontUseExcludeSimilar)" aria-required="true" placeholder="@Html.DisplayNameFor(model => model.DontUseExcludeSimilar)" />
                </div>
            </div>
        </div>
    </div>
</form>
<script>
    var slider = document.getElementById("lenghtRanger");
    var inputField = document.getElementById("lenghtField");

    slider.addEventListener("input", function () {
        inputField.value = slider.value;
    });
</script>